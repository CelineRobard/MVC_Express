<h1>Liste des usagers :</h1>

<% if(typeof tousUsagers != 'undefined') { %>
    <% tousUsagers.forEach(function(usager) {%>
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <img class="rounded-circle img-thumbnail" src="/images/<%= (typeof usager.fichierImage == 'undefined') || usager.fichierImage.length > 1 ? usager.fichierImage : 'user-defaut.jpg' %>" alt="Image de profil" />
            <%= usager.nom %> - <%= usager.email %> 
            <a href="/usagers/editer/<%= usager._id %>" >Modifier</a>
            <a href="/usagers/supprimer/<%= usager._id %>" >Supprimer</a>
        </div>   
    <% }); %>
<% } %>

<p>
    <a href="/">Retour au menu</a>
</p>
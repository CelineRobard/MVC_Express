<h2>Gestion des usagers</h2>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Accueil</a></li>
      <li class="breadcrumb-item active" ><a href="/usagers/listeUsagers">Usagers</a></li>
      <li class="breadcrumb-item active" aria-current="page"><%= typeof nom != 'undefined' ? nom : 'Nouvel usager' %></li>
    </ol>
</nav>

<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body"> 
        <h1 class="text-center mb-3">
            <i class="fas <%= iconeFAS%>"></i> <%= titre %> un usager
        </h1>
        <%- include ('./partiels/messages.ejs') %>

        <form method="POST" enctype="multipart/form-data">
            
            <div class="form-group">
                <input type="text" id="_id" name="_id" class="form-control" 
                    value="<%= typeof _id != 'undefined' ? _id : '' %>"
                    hidden>
            </div>
            <div class="form-group">
                <label for="nom">Nom</label>
                <input type="text" id="nom" name="nom" class="form-control" 
                    value="<%= typeof nom != 'undefined' ? nom : '' %>"
                    placeholder="Entrez le nom" >
            </div>
            <div class="form-group">
                <label for="email">Courriel</label> 
                <input type="email" id="email" name="email" class="form-control" 
                    value="<%= typeof email != 'undefined' ? email : '' %>"
                    placeholder="Entrez un courriel">
            </div>
            <fieldset class="form-group">
                <div class ="row">
                    <legend class="col-form-label cols-sm-2 pt-0">Rôles</legend>
                    <div class="col-sm-2"></div>
                    <div class="col-sm-9">
                        <div class="form-check">
                            <input type="checkbox" id="admin" name="admin" class="form-check-input" <%= typeof admin != "undefined" ? "checked" : ""; %> />
                            <label for="admin">Admin</label>
                        </div>
                    </div>
                    <div class="col-sm-2"></div>
                    <div class="col-sm-9">
                        <div class="form-check">
                            <input type="checkbox" id="gestion" name="gestion" class="form-check-input" <%= typeof gestion != "undefined" ? "checked" : ""; %> />
                            <label for="gestion">Gestion</label>
                        </div>
                    </div>
                    <div class="col-sm-2"></div>
                    <div class="col-sm-9">
                        <div class="form-check">
                            <input type="checkbox" id="normal" name="normal" class="form-check-input" checked disabled/>
                            <label for="gestion">Normal</label>
                        </div>
                    </div>
                </div>
            </fieldset>
            <div class="form-group">
                <label for="password">Mot de passe</label> 
                <input type="password" id="password" name="password" class="form-control" 
                    value="<%= typeof password != 'undefined' ? password : '' %>"
                    placeholder="Entrez un mot de passe">
            </div>
            <div class="form-group">
                <label for="password2">Confirmer le mot de passe</label> 
                <input type="password" id="password2" name="password2" class="form-control" 
                    value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
                    placeholder="Confirmez le mot de passe">
            </div>
            
                <% if(titre === "Créer") { %>
                    <p>Image de profil</p>
                    <div class="form-group">
                        <label>Téléverser</label>
                        <input type="file" name="fichier" required />
                    </div>
                    <div>
                        <button type="submit" formaction="/usagers/ajouter" class="btn btn-primary btn-block">Enregistrer nouveau compte</button>
                    </div>
                <% } else if(titre === "Modifier") { %>
                    <p>Image de profil</p>
                    <% if(typeof fichierImage !== "undefined" && fichierImage != '') { %>
                        <div>
                            <img src="/images/<%= fichierImage %>" alt="Image de profil" />
                            <input type="text" id="fichierImage" name="fichierImage" value="<%= fichierImage %>" hidden="true" />
                            <button type="submit" formaction="/usagers/editer/<%= typeof _id != 'undefined' ? _id : '' %>" class="btn btn-secondary btn-block">modifier</button>
                        </div>
                    <% }else{ %>
                        <div class="form-group">
                            <label>Téléverser</label>
                            <input type="file" name="fichier" required />
                        </div>
                    <% }%>
                    <div>
                        <button type="submit" formaction="/usagers/editer" class="btn btn-primary btn-block">Enregistrer les modifications</button>
                    </div>
                <% } else if(titre === "Supprimer") { %>
                    <div>
                        <button type="submit" formaction="/usagers/supprimer" class="btn btn-primary btn-block">Confirmer la suppression</button>
                    </div>
                <% }%>
            </fieldset>
        </form>
    </div>
</div>
</div>

